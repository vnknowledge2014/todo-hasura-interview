{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": [
      "node",
      "@types/jest"
    ],
    "lib": [
      "esnext",
      "es2015.proxy"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    ".git",
    "deployment",
    "node_modules",
    "dist",
    "coverage",
    "**/test/*.spec.ts"
  ]
}